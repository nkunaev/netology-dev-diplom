all:
  hosts:
%{ for index, hosts in k8s_master ~}
    master-${index}:
      ansbile_host: ${ hosts.ip_address }
      ip: ${ hosts.ip_address }
%{ endfor ~}
%{ for index, hosts in k8s_worker ~}
    worker-${index}:
      ansbile_host: ${ hosts.ip_address }
      ip: ${ hosts.ip_address }
%{ endfor ~}
  vars:
    ansible_user: ubuntu
    ansible_ssh_private_key_file: "~/.ssh/settings"
    ansible_become_method: sudo
  children:
    kube_control_plane:
      hosts:
%{ for index, hosts in k8s_master ~}
        master-${index}:
%{ endfor ~}
    kube_node:
      hosts:
%{ for index, hosts in k8s_worker ~}
        worker-${index}:
%{ endfor ~}
    etcd:
      hosts:
%{ for index, hosts in k8s_master ~}
        master-${index}:
%{ endfor ~}
%{ for index, hosts in k8s_worker ~}
        worker-${index}:
%{ endfor ~}
    k8s_cluster:
      children:
        kube_control_plane:
        kube_node:
    calico_rr:
      hosts: {}
